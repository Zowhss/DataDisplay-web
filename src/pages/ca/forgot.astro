---
import BaseLayout from "../../layout/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{ t("for.forg")}</title>
        <link rel="icon" href="/favicon-16x16.ico">
    </head>
    <body>
        <BaseLayout />
        <div class="form-container">
            <div class="logo-container">{ t("for.pass")}</div>

            <form class="form">
                <div class="form-group">
                    <input
                        type="text"
                        id="email"
                        name="email"
                        placeholder="Enter your email"
                        required=""
                    />
                </div>

                <button class="form-submit-btn" type="submit">{ t("for.send")}</button
                >
            </form>

            <p class="signup-link">
                { t("for.dont")}
                <a href={"/" + lang + "/register"} class="signup-link link">{ t("for.sign")}</a>
            </p>
        </div>
    </body>
</html>

<style>
    .form-container {
        width: 350px;
        height: 260px;
        background-color: #fff;
        padding: 32px 24px;
        font-size: 14px;
        font-family: inherit;
        color: #212121;
        display: flex;
        position: absolute;
        top: 40%;
        left: 40%;
        margin: -25px 0 0 -25px;
        flex-direction: column;
        gap: 20px;
        box-sizing: border-box;
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;;
    }

    .form-container button:active {
        scale: 0.95;
    }

    .form-container .logo-container {
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
            "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
        text-align: center;
        font-weight: 800;
        font-size: 28px;
    }

    .form-container .form {
        display: flex;
        flex-direction: column;
    }

    .form-container .form-group {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .form-container .form-group label {
        display: block;
        margin-bottom: 5px;
    }

    .form-container .form-group input {
        width: 100%;
        padding: 12px 16px;
        border-radius: 20px;
        font-family: inherit;
        border: 1px solid #ccc;
    }

    .form-container .form-group input::placeholder {
        opacity: 0.5;
    }

    .form-container .form-group input:focus {
        outline: none;
        border-color: #1778f2;
    }

    .form-container .form-submit-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: inherit;
        color: #fff;
        background-color: #ff6a3e;
        border: none;
        width: 100%;
        padding: 12px 16px;
        font-size: inherit;
        gap: 8px;
        margin: 12px 0;
        cursor: pointer;
        border-radius: 20px;
        box-shadow:
            0px 0px 3px rgba(0, 0, 0, 0.084),
            0px 2px 3px rgba(0, 0, 0, 0.168);
    }

    .form-container .form-submit-btn:hover {
        background-color: black;
    }

    .form-container .link {
        color: #ff6a3e;
        text-decoration: none;
    }

    .form-container .signup-link {
        align-self: center;
        font-size: 10px;
        color: #747474;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
            "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
    }

    .form-container .signup-link .link {
        font-size: 11px;
        text-decoration: underline;
        text-decoration-color: #ff6a3e;
        color: #ff6a3e;
        cursor: pointer;
        font-weight: 800;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
            "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
    }

    .form-container .link:hover {
        text-decoration: underline;
    }
</style>
